<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".Activity.InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/infoText1"
            android:fontFamily="@font/gowunbatang"
            android:textSize="13pt"
            android:textStyle="italic"
            android:typeface="serif"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Name : HexMap Creator\nLanguage : Java \nTool : Android Studio\nDate : 2021.06.23\nDeveloper : Hosung.Kim" />

        <TextView
            android:id="@+id/infoText2"
            android:fontFamily="@font/gowunbatang"
            android:textSize="9pt"
            android:textStyle="italic"
            android:typeface="serif"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact : hyongak516@mail.hongik.ac.kr\nGitHub : https://github.com/hyongak516\nWebsite : https://sites.google.com/view/hosungkim" />

    </LinearLayout>


    <Button
        android:id="@+id/infoshutbtn"
        android:fontFamily="@font/gowunbatang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Back"/>



</FrameLayout>